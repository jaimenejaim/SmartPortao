<?xml version="1.0" encoding="utf-8"?>

<!-- Here we set appearances to every button's state -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- desativado -->
    <item android:drawable="@drawable/shape_button_facebook_disabled" android:state_enabled="false" />

    <!-- pressionado -->
    <item android:drawable="@drawable/shape_button_facebook_pressed" android:state_enabled="true" android:state_pressed="true" />

    <!-- focalisado-->
    <item android:drawable="@drawable/shape_button_facebook_pressed" android:state_enabled="true" android:state_focused="true" />

    <!-- normal-->
    <item android:drawable="@drawable/shape_button_facebook_normal" android:state_enabled="true" />

</selector>
